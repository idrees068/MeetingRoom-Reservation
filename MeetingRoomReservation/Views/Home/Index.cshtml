@model ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HeaderFooter.cshtml";
}


<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard">
        <div class="container mt-5">
            <div class="row mb-3">
                <div class="col">
                    <h2>All Reservations</h2>
                </div>
                <div class="col text-right">
                    <a href="/Home/AddReservation" class="btn btn-primary">Add Reservation</a>
                </div>
            </div>

            <p>Total Reservations: @(Model.Reservations != null ? Model.Reservations.Count : 0)</p>

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Reservations != null && Model.Reservations.Count > 0)
                    {
                        @foreach (var reserve in Model.Reservations)
                        {
                            <tr>
                                @if (reserve.User != null)
                                {
                                    <td>@reserve.User.Name</td>
                                    <td>@reserve.User.Designation</td>
                                }
                                else
                                {
                                    <td colspan="2" class="text-center">User Info Missing</td>
                                }
                                <td>@reserve.StartTime.ToString("g")</td>
                                <td>@reserve.EndTime.ToString("g")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">There are no records.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>
<!-- End #main -->

<script src="~/assets/js/custom.js"></script>
